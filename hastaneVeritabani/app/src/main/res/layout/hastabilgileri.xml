<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".veritabani">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hastane" />


    <EditText
        android:id="@+id/ethastadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="171dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="171dp"
        android:layout_marginRight="110dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Hastanın Adı/Soyadı:"
        android:textColor="#950D0D"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="271dp"
        android:layout_marginRight="110dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Telefon Numarası:"
        android:textColor="#950D0D"
        android:textSize="15sp"
        android:textStyle="bold"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/sifreEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="271dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberPassword"
        android:textStyle="bold" />
      <TextView
          android:id="@+id/textView3"
          android:layout_width="160dp"
          android:layout_height="45dp"
          android:layout_below="@id/textView2"
          android:layout_marginTop="50dp"
          android:ems="10"
          android:gravity="center"
          android:hint="Hastanın Rahatsızlıgı:"
          android:textColor="@android:color/black"
          android:textSize="15sp"
          android:textStyle="bold"/>
        <EditText
            android:id="@+id/hastadurumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sifreEdit"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="371dp"
            android:ems="10"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bkaydet"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:ems="6"
            android:text="KAYDET"
            android:textStyle="bold"
            android:background="@android:color/primary_text_light"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bsil"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:ems="6"
            android:text="SİL"
            android:textStyle="bold"
            android:background="@android:color/holo_red_light"/>

        <Button
            android:id="@+id/blistele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hastadurumu"
            android:layout_alignEnd="@+id/bsil"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="-135dp"
            android:background="@android:color/primary_text_light"
            android:ems="6"
            android:text="LİSTELE"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>