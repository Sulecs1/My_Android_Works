<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailyActivity">

    <TextView
        android:id="@+id/landMarkName2"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:gravity="center_vertical"
        android:text="Ülkenin Nüfusu:"
        android:textAlignment="center"
        android:textColor="#5C1B1B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LandMarkName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="294dp"
        android:layout_height="247dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/LandMarkName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/LandMarkName"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:text="LandMark Name:"
        android:textAlignment="center"
        android:textColor="#5C1B1B"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/landMarkName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>